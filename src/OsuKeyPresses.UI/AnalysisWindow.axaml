<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/avalonia"
             xmlns:ui="clr-namespace:OsuKeyPresses.UI"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             x:Class="OsuKeyPresses.UI.AnalysisWindow"
             x:DataType="ui:MainViewModel">
    <Grid ColumnDefinitions="3*,250">
        <oxy:PlotView Grid.Column="0" Name="PlotView" Margin="10" Background="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
        
        <Border Grid.Column="1" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="1,0,0,0"
                Margin="0,10,10,10">
            <ScrollViewer Padding="15">
                <StackPanel Spacing="20">
                    <Image Source="{Binding RulesetImage}"
                           Width="42"
                           Height="42"
                           Margin="0,0,4,0"/>

                    <StackPanel Spacing="10" IsVisible="{Binding PlayerInformationAvailable}">
                        <TextBlock Text="Player Information" 
                                  FontWeight="Bold" 
                                  FontSize="16"
                                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                        
                        <StackPanel Spacing="5">
                            <Border CornerRadius="8" 
                                    Width="64" 
                                    Height="64"
                                    ClipToBounds="True"
                                    Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
                                <HyperlinkButton 
                                    NavigateUri="{Binding UserUrl}"
                                    ToolTip.Tip="Click to view profile!">
                                    <Image asyncImageLoader:ImageLoader.Source="{Binding UserAvatarUrl}" 
                                           Stretch="UniformToFill"
                                           Width="64" 
                                           Height="64"/>
                                </HyperlinkButton>
                            </Border>
                            
                            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="5">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Username:" FontSize="14"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding User.Username}" FontSize="14" HorizontalAlignment="Right"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Rank:" FontSize="14"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding User.Statistics.GlobalRank, StringFormat='#{0:N0}', FallbackValue='#-'}" FontSize="14" HorizontalAlignment="Right"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Country:" FontSize="14"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding User.Country.Name}" FontSize="14" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                    <Separator Background="{DynamicResource SystemControlForegroundBaseLowBrush}" IsVisible="{Binding PlayerInformationAvailable}"/>

                    <StackPanel Spacing="10">
                        <TextBlock Text="Score Information" 
                                  FontWeight="Bold" 
                                  FontSize="16"
                                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                        
                        <StackPanel Spacing="5">
                            <ItemsControl ItemsSource="{Binding ModImagePaths}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
    
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding .}"
                                               Width="42"
                                               Height="42"
                                               Margin="0,0,4,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="5">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Score:" FontSize="14"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ScoreInfo.LegacyTotalScore, StringFormat='{}{0:N0}'}" FontSize="14" HorizontalAlignment="Right"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Accuracy:" FontSize="14"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ScoreAccuracyPercentage, StringFormat='{}{0:F2}%'}" FontSize="14" HorizontalAlignment="Right"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Max Combo:" FontSize="14"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ScoreInfo.MaxCombo, StringFormat='{}{0:N0}x'}" FontSize="14" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                    <Separator Background="{DynamicResource SystemControlForegroundBaseLowBrush}"/>

                    <StackPanel Spacing="10">
                        <TextBlock Text="Hit Statistics" 
                                  FontWeight="Bold" 
                                  FontSize="16"
                                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                        
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="5">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Perfect (320):" FontSize="13" IsVisible="{Binding IsManiaReplay}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding PerfectCount, StringFormat='{}{0:N0}'}" FontSize="13" HorizontalAlignment="Right" IsVisible="{Binding IsManiaReplay}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Great (300):" FontSize="13"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding GreatCount, StringFormat='{}{0:N0}'}"  FontSize="13" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Good (200):" FontSize="13" IsVisible="{Binding IsManiaReplay}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding GoodCount, StringFormat='{}{0:N0}'}"  FontSize="13" HorizontalAlignment="Right" IsVisible="{Binding IsManiaReplay}"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="OK (100):" FontSize="13"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding OkCount, StringFormat='{}{0:N0}'}"  FontSize="13" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Meh (50):" FontSize="13" IsVisible="{Binding !IsTaikoReplay}"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding MehCount, StringFormat='{}{0:N0}'}"  FontSize="13" HorizontalAlignment="Right" IsVisible="{Binding !IsTaikoReplay}"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Miss:" FontSize="13"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding MissCount, StringFormat='{}{0:N0}'}"  FontSize="13" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>